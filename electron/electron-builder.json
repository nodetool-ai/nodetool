{
    "appId": "ai.nodetool",
    "productName": "Nodetool",
    "directories": {
        "output": "dist",
        "buildResources": "resources"
    },
    "afterPack": "scripts/after-pack.cjs",
    "files": [
        "assets/**/*",
        "dist-electron/main.js",
        "dist-electron/**/*",
        "dist-web/**/*",
        "app-update.yml"
    ],
    "extraResources": [
        {
            "from": "../web/dist",
            "to": "web"
        },
        {
            "from": "resources/environment.lock.yml",
            "to": "environment.lock.yml"
        },
        {
            "from": "resources/environment-osx-64.yml",
            "to": "environment-osx-64.lock.yml"
        },
        {
            "from": "resources/environment-osx-arm64.yml",
            "to": "environment-osx-arm64.lock.yml"
        },
        {
            "from": "resources/environment-linux-64.yml",
            "to": "environment-linux-64.lock.yml"
        },
        {
            "from": "resources/environment-linux-aarch64.yml",
            "to": "environment-linux-aarch64.lock.yml"
        },
        {
            "from": "resources/environment-win-64.yml",
            "to": "environment-win-64.lock.yml"
        },
        {
            "from": "resources/micromamba",
            "to": "micromamba",
            "filter": [
                "**/*"
            ]
        }
    ],
    "publish": [
        {
            "provider": "github",
            "owner": "nodetool-ai",
            "repo": "nodetool"
        }
    ],
    "mac": {
        "category": "public.app-category.developer-tools",
        "target": [
            {
                "target": "zip",
                "arch": [
                    "x64",
                    "arm64"
                ]
            },
            {
                "target": "dmg",
                "arch": [
                    "x64",
                    "arm64"
                ]
            }
        ],
        "hardenedRuntime": true,
        "gatekeeperAssess": false,
        "entitlements": "entitlements.mac.plist",
        "entitlementsInherit": "entitlements.mac.plist",
        "notarize": true,
        "extendInfo": {
            "NSMicrophoneUsageDescription": "Allow access to your microphone for audio recording",
            "NSCameraUsageDescription": "Allow access to your camera for video recording",
            "com.apple.security.device.audio-input": true,
            "com.apple.security.device.camera": true
        }
    },
    "win": {
        "target": [
            {
                "target": "nsis",
                "arch": [
                    "x64"
                ]
            }
        ],
        "icon": "resources/icon.ico"
    },
    "linux": {
        "target": [
            "AppImage",
            "flatpak"
        ],
        "category": "Development",
        "maintainer": "hello@nodetool.ai",
        "desktop": {
            "entry": {
                "Name": "Nodetool",
                "Comment": "Visual Builder for AI Workflows and Agents",
                "GenericName": "AI Workflow Editor",
                "Keywords": "AI;Development;Workflow;Node;Editor;Machine Learning;",
                "Categories": "Development;IDE;",
                "MimeType": "x-scheme-handler/nodetool;",
                "StartupWMClass": "Nodetool"
            }
        }
    },
    "flatpak": {
        "useWaylandFlags": true,
        "finishArgs": [
            "--share=ipc",
            "--socket=x11",
            "--socket=wayland",
            "--device=dri",
            "--socket=pulseaudio",
            "--share=network",
            "--filesystem=home",
            "--talk-name=org.freedesktop.Notifications",
            "--device=all"
        ],
        "runtime": "org.freedesktop.Platform",
        "runtimeVersion": "23.08",
        "sdk": "org.freedesktop.Sdk",
        "base": "org.electronjs.Electron2.BaseApp",
        "baseVersion": "23.08"
    },
    "nsis": {
        "oneClick": false,
        "allowToChangeInstallationDirectory": true,
        "createDesktopShortcut": true,
        "runAfterFinish": true,
        "warningsAsErrors": false,
        "include": "resources/installer.nsh",
        "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "artifactName": "${productName}-${version}-${arch}.${ext}",
    "generateUpdatesFilesForAllChannels": true
}
