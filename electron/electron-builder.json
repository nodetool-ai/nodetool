{
    "appId": "ai.nodetool",
    "productName": "Nodetool",
    "directories": {
        "output": "dist",
        "buildResources": "resources"
    },
    "files": [
        "assets/**/*",
        "dist-electron/**/*",
        "dist-web/**/*"
    ],
    "extraResources": [
        {
            "from": "../requirements",
            "to": "requirements"
        },
        {
            "from": "../web/dist",
            "to": "web"
        },
        {
            "from": "../apps/dist",
            "to": "apps"
        },
        {
            "from": "../src",
            "to": "src"
        }
    ],
    "publish": [
        {
            "provider": "github",
            "owner": "nodetool-ai",
            "repo": "nodetool"
        }
    ],
    "mac": {
        "category": "public.app-category.developer-tools",
        "target": [
            {
                "target": "zip",
                "arch": [
                    "x64",
                    "arm64"
                ]
            },
            {
                "target": "dmg",
                "arch": [
                    "x64",
                    "arm64"
                ]
            }
        ],
        "hardenedRuntime": true,
        "gatekeeperAssess": false,
        "entitlements": "entitlements.mac.plist",
        "entitlementsInherit": "entitlements.mac.plist",
        "notarize": true,
        "extendInfo": {
            "NSMicrophoneUsageDescription": "Allow access to your microphone for audio recording",
            "NSCameraUsageDescription": "Allow access to your camera for video recording",
            "com.apple.security.device.audio-input": true,
            "com.apple.security.device.camera": true
        }
    },
    "win": {
        "target": [
            {
                "target": "nsis",
                "arch": [
                    "x64"
                ]
            }
        ],
        "icon": "resources/icon.ico",
        "azureSignOptions": {
            "endpoint": "https://weu.codesigning.azure.net",
            "codeSigningAccountName": "Nodetool",
            "certificateProfileName": "nodetool"
        }
    },
    "linux": {
        "target": [
            "AppImage"
        ],
        "category": "Development"
    },
    "nsis": {
        "oneClick": false,
        "allowToChangeInstallationDirectory": true,
        "createDesktopShortcut": true,
        "runAfterFinish": true,
        "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "artifactName": "${productName}-${version}-${arch}.${ext}",
    "generateUpdatesFilesForAllChannels": true
}