{
    "appId": "ai.nodetool",
    "productName": "Nodetool",
    "directories": {
        "output": "dist",
        "buildResources": "resources"
    },
    "files": [
        "index.js",
        "preload.js",
        "index.html"
    ],
    "extraResources": [
        "requirements.txt",
        {
            "from": "../web/dist",
            "to": "web"
        },
        {
            "from": "../src",
            "to": "src"
        }
    ],
    "mac": {
        "category": "public.app-category.developer-tools",
        "target": [
            "dmg"
        ],
        "publish": [
            "github"
        ]
    },
    "win": {
        "target": [
            "nsis"
        ],
        "publish": [
            "github"
        ]
    },
    "linux": {
        "target": [
            "snap"
        ],
        "publish": [
            "github"
        ]
    },
    "snap": {
        "confinement": "strict",
        "grade": "stable",
        "summary": "Nodetool",
        "name": "nodetool"
    },
    "nsis": {
        "oneClick": false,
        "allowToChangeInstallationDirectory": true,
        "createDesktopShortcut": true,
        "runAfterFinish": true
    }
}