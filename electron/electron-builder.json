{
    "appId": "ai.nodetool",
    "productName": "Nodetool",
    "directories": {
        "output": "dist",
        "buildResources": "resources"
    },
    "files": [
        "index.js",
        "preload.js",
        "index.html"
    ],
    "extraResources": [
        "environment.yaml",
        {
            "from": "../web/dist",
            "to": "web" 
        },
        {
            "from": "../src",
            "to": "src"
        }
    ],
    "mac": {
        "category": "public.app-category.developer-tools",
        "target": [
            "dmg"
        ],
        "publish": ["github"]
    },
    "win": {
        "target": [
            "nsis"
        ],
        "publish": ["github"]
    },
    "nsis": {
        "oneClick": false,
        "allowToChangeInstallationDirectory": true,
        "createDesktopShortcut": true,
        "runAfterFinish": true
    },
    "publish": {
        "provider": "github",
        "owner": "nodetool-ai",
        "repo": "nodetool",
        "private": false,
        "releaseType": "release"
    }
}