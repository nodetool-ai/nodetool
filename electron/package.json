{
  "name": "nodetool-electron",
  "version": "0.6.0",
  "description": "node-based AI development tool",
  "homepage": "https://nodetool.ai",
  "main": "dist-electron/main.js",
  "scripts": {
    "start": "electron .",
    "chat": "electron . --chat",
    "build": "tsc && vite build && electron-builder",
