{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "*": ["*", "node_modules/*"]
    },
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "moduleDetection": "force"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "index.ts",
    "preload.ts",
    "preload-workflow.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
} 