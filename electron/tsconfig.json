{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "*": ["*", "node_modules/*"]
    },
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "moduleDetection": "force",
    "outDir": "dist-electron",
    "esModuleInterop": true
  },
  "include": [
    "src",
    "vite.config.ts",
    "eslint.config.mjs",
    "src/preload.ts",
    "src/preload-workflow.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dist-web",
    "dist-electron",
    "out"
  ]
} 